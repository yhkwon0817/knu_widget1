<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".GetData">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DailyWidget"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/basicfont"
            android:textSize="30dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/basicfont"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="자신의 띠를 입력해주세요"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Platform.MaterialComponents.Light"
        android:id="@+id/spinner1"
        android:layout_marginLeft="150dp"
        android:autofillHints="띠를 입력 해주세요"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/basicfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간표들을 입력해 주세요"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="요일"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="과목명"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="시작시간"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="종료시간"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Platform.MaterialComponents.Light"
            android:id="@+id/spinner2"
            android:autofillHints="요일"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="과목명"
            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/st_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="시작시간"
            android:textColorHint="@color/black"
            />
            />
        <EditText
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="종료시간"
            android:textColorHint="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basicfont"
            android:text="추가하기"
            android:id="@+id/btn1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/basicfont"
            android:text="삭제하기"
            android:id="@+id/btn2"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/listivew"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/basicfont"
        android:text="다음 페이지"
        />
</LinearLayout>