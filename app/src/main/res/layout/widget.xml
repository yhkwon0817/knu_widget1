<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/susung" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:fontFamily="@font/susung"/>

        <TextView
            android:id="@+id/text_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/susung"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:fontFamily="@font/susung"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/susung"
            android:layout_height="wrap_content"
            android:background="@color/back"
            android:text="날씨"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basicfont"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_corona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:fontFamily="@font/basicfont">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확진자 수"
            android:textSize="20dp"
            android:fontFamily="@font/susung"/>

        <TextView
            android:id="@+id/text_corona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basicfont"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_luck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운세"
            android:textSize="20dp"
            android:fontFamily="@font/susung"/>

        <TextView
            android:id="@+id/text_luck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basicfont"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 뉴스"
            android:textSize="20dp"
            android:fontFamily="@font/susung"/>

        <TextView
            android:id="@+id/text_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basicfont"/>

    </LinearLayout>

</LinearLayout>